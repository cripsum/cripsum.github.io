RewriteEngine On

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

AddDefaultCharset UTF-8

<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

<Files "config.php">
  Order allow,deny
  Deny from all
</Files>